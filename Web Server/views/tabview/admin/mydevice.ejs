    <link href="/styles/dashboard/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

  <div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i>Thiết bị của tôi
      </div><!-- card-header -->

    <div class="card-body">
      <div class="table-responsive">
         <table class="table table-bordered" width="100%" id="MyDeviceTable" cellspacing="0">
            <thead>
               <tr>
                <th>Mã thiết bị</th>
                <th>Tên thiết bị</th>
                <th>Thông số</th>
                <th>Thời điểm tạo</th>
                <th>Chỉnh sửa cuối</th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
          
  				<button ng-show="me.admin" type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#AddDeviceDialog">Tạo mới</button> 

          <button ng-show="me.admin" type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#RemoveDeviceDialog">Xóa thiết bị</button>
  	
      </div><!-- table-responsive -->
    </div><!-- card-body -->

    <div class="card-footer small text-muted">Cập nhật ngày hôm qua lúc 11:59 PM
    </div><!-- card-footer -->
      
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fa fa-angle-up"></i>
    </a>


  </div> <!-- <div class="card mb-3"> -->

  <!-- ADD DEVICE -->
  <div class="modal fade" id="AddDeviceDialog" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" dât-dismiss="modal"><i class="fa fa-times-circle"></i></button>
          <h4 class="modal-title">Thêm thiết bị</h4> 
        </div>
        <div class="modal-body">
          <form ng-submit="submitAddDevice()" id="form-adddevice">
            <label for="name" class="control-label">Mã thiết bị</label>
              <input title="Device ID" name="DeviceId" type="text" placeholder="e.g 123" class="form-control" ng-model="AddDeviceForm.devid"> 

              <label for="name" class="control-label">Tên thiết bị</label>
              <input title="Device Name" name="DeviceName" type="text" placeholder="e.g FastTracker" class="form-control" ng-model="AddDeviceForm.devname"> 

            <label for="model" class="control-label">Thông số</label>
              <input title="Parameter" name="parameter" type="text" placeholder="e.g C7NDZ52" class="form-control" ng-model="AddDeviceForm.parameter"> 

            <div style="margin-top: 20px"> 
              <button type="submit" class="btn btn-primary">
                Tạo mới
              </button>
              <button type="text" class="btn btn-primary">
                Xóa thông tin
              </button>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" data-dismiss="modal">Đóng</button>
        </div>
      </div>
    </div>
  </div>
 

<!-- REMOVE DEVICE -->
<div class="modal fade" id="RemoveDeviceDialog" role="dialog">
  <div class="modal-dialog">
  
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><i class="fa fa-times-circle"></i></button>
        <h4 class="modal-title">Xóa thiết bị</h4> 
      </div>
      <div class="modal-body">
        <form ng-submit="submitRemoveDevice(DevId)" id="form-removedevice">
          <label for="name" class="control-label">Mã thiết bị</label>
            <input title="Device ID" name="DeviceId" type="number" placeholder="e.g 123" class="form-control" ng-model="DevId" autofocus> 

          <div style="margin-top: 20px"> 
            <button type="submit" class="btn btn-primary">
              Xóa
            </button>
            <button type="reset" class="btn btn-primary">
              Xóa thông tin
            </button>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Đóng</button>
      </div>
    </div>
  </div>
</div>